<head>
  <style type="text/css">
    .fa {
      /*padding: 10px;*/
      font-size: 30px;
      width: 30px;
      text-align: center;
      text-decoration: none;
      margin: 5px 2px;
    }

    .fa:hover {
        opacity: 0.7;
    }

    .fa-facebook {
      background: #3B5998;
      color: white;
      margin-left: 5px;
      border-radius: 15px;
      animation: bounce;
      animation-duration: 0.5s;
    }

    .fa-twitter {
      background: #55ACEE;
      color: white;
      margin-left: 5px;
      border-radius: 30px;
      animation: bounce;
      animation-duration: 1s;
    }

    .fa-google {
      background: #dd4b39;
      color: white;
      margin-left: 5px;
      border-radius: 30px;
      animation: bounce;
      animation-duration: 1.5s;
    }

    .fa-linkedin {
      background: #007bb5;
      color: white;
      margin-left: 5px;
      /*border-radius: 30px;*/
      animation: bounce;
      animation-duration: 2s;
    }

    .fa-instagram {
      background: #125688;
      color: white;
      animation: bounce;
      animation-duration: 2.5s;
    }

  </style>
</head>

<body>
  <div id="contact" class="container" style="padding: 50px; background-color: #e8c06f; border-radius: 15px;">
    <h1 style="text-align: center; color: white;" class="animate__animated animate__bounceIn"><strong><i><u>Contact Us</u></i></strong>
    </h1>

    <div class="container">
      <div class="row">
      <div class="col-sm-6">
        
        <%= form_with model: contact do |form| %>
          <div>
            <%= form.label :first_name %><br>
            <%= form.text_field :first_name %>
            <% @contact.errors.full_messages_for(:first_name).each do |message| %>
              <div><%= message %></div>
            <% end %>
            
          </div>

          <div>
            <%= form.label :last_name %><br>
            <%= form.text_area :last_name %><br>
            <% @contact.errors.full_messages_for(:last_name).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.label :email %><br>
            <%= form.text_area :email %><br>
            <% @contact.errors.full_messages_for(:email).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.label :address %><br>
            <%= form.text_area :address %><br>
            <% @contact.errors.full_messages_for(:address).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.label :suggetion %><br>
            <%= form.text_area :suggetion %><br>
            <% @contact.errors.full_messages_for(:suggetion).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <button class="btn btn-outline-success" type="submit"><%= form.submit %></button>
            <br>
            <br>
            <button class="btn btn-outline-success">
              <%= link_to 'Back', root_path%>
            </button>
          </div>
        <% end %>
      </div>


      <div class="col-sm-6">
        <h3>Address:</h3>
        <p>101, Ramnagar, Near by xyz hospital, Indore-452001, MP</p>
        <br>

        <h2>Contact Details:-</h2>
        <h3>Email:</h3>
        <p>xyz@littlestars.com</p>
        <br>

        <h3>Contact No.:</h3>
        <p>+91-***********</p>
        <br>

      </div>
      </div>
    </div>


    <div class="container">
      <center>
        <h4>Connect with us:</h4>
        <a href="#" class="fa fa-facebook"></a>
        <a href="#" class="fa fa-twitter"></a>
        <a href="#" class="fa fa-google"></a>
        <a href="#" class="fa fa-linkedin"></a>
        <a href="#" class="fa fa-instagram"></a>
      </center>
    </div>
    
