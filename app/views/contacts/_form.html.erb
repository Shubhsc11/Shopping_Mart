<head>
  <style type="text/css">
    .fa {
      /*padding: 10px;*/
      font-size: 30px;
      width: 30px;
      text-align: center;
      text-decoration: none;
      margin: 5px 2px;
    }

    .fa:hover {
        opacity: 0.7;
    }

    .fa-facebook {
      background: #3B5998;
      color: white;
      margin-left: 5px;
      border-radius: 15px;
      animation: bounce;
      animation-duration: 0.5s;
    }

    .fa-twitter {
      background: #55ACEE;
      color: white;
      margin-left: 5px;
      border-radius: 30px;
      animation: bounce;
      animation-duration: 1s;
    }

    .fa-google {
      background: #dd4b39;
      color: white;
      margin-left: 5px;
      border-radius: 30px;
      animation: bounce;
      animation-duration: 1.5s;
    }

    .fa-linkedin {
      background: #007bb5;
      color: white;
      margin-left: 5px;
      /*border-radius: 30px;*/
      animation: bounce;
      animation-duration: 2s;
    }

    .fa-instagram {
      background: #125688;
      color: white;
      animation: bounce;
      animation-duration: 2.5s;
    }

  </style>
</head>

<body>
  <div id="contact" class="container-fluid" style="background-color: #e6e34c;">
    <h1 style="text-align: center; color: white;" class="animate__animated animate__bounceIn"><strong><i><u>Contact Us</u></i></strong>
    </h1>

    <div class="container">
      <div class="row">
      <div class="col-sm-6">
        
        <%= form_with model: contact do |form| %>
          <div>
            <%= form.label :first_name %><br>
            <%= form.text_field :first_name %>
            <% @contact.errors.full_messages_for(:first_name).each do |message| %>
              <div><%= message %></div>
            <% end %>
            
          </div>

          <div>
            <%= form.label :last_name %><br>
            <%= form.text_area :last_name %><br>
            <% @contact.errors.full_messages_for(:last_name).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.label :email %><br>
            <%= form.text_area :email %><br>
            <% @contact.errors.full_messages_for(:email).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.label :address %><br>
            <%= form.text_area :address %><br>
            <% @contact.errors.full_messages_for(:address).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.label :suggetion %><br>
            <%= form.text_area :suggetion %><br>
            <% @contact.errors.full_messages_for(:suggetion).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.submit %>
          </div>

        <% end %>




